{% trans_default_domain 'admin' %}

<form class="text-end" method="post" action="{{ path('app_admin_recipe_delete', {'id': recipe.id}) }}" onsubmit="return confirm({{ 'admin.delete_confirm'|trans }});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
    <button name="delete" class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i> {{ 'admin.delete'|trans }}</button>
</form>
