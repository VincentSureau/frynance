<div id="sidebar">

    <div class="sidebar-wrapper active">
        <div class="sidebar-header position-relative">
            <div class="d-flex justify-content-between align-items-center">
                <div class="logo">
                    <a class="text-warning" href="{{ path('app_front_home') }}">
                        <img src="{{ asset('assets/images/image-2.png') }}" alt="Logo" srcset="">
                        <span>Frynance</span>
                    </a>
                </div>
                {% include 'theme/layouts/partials/components/_theme_switch.html.twig' %}
            </div>
            <div class="sidebar-menu">
                <ul class="menu">
                    <li class="sidebar-title">Menu</li>
                    <li class="sidebar-item {{ 'app_admin_recipe_index'|is_active }}">
                        <a href="{{ path('app_admin_recipe_index') }}" class="sidebar-link">
                            <i class="bi bi-card-checklist"></i>
                            <span>{{ 'sidebar.recipes'|trans }}</span>
                        </a>
                    </li>
                    <li class="sidebar-item {{ 'app_admin_quote_index'|is_active }}">
                        <a href="{{ path('app_admin_quote_index') }}" class="sidebar-link">
                            <i class="bi bi-file-ruled"></i>
                            <span>{{ 'sidebar.quotes'|trans }}</span>
                        </a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="sidebar-item {{ 'app_admin_ingredient_index'|is_active }}">
                            <a href="{{ path('app_admin_ingredient_index') }}" class="sidebar-link">
                                <i class="bi bi-egg-fill"></i>
                                <span>{{ 'sidebar.ingredients'|trans }}</span>
                            </a>
                        </li>
                        <li class="sidebar-item {{ 'app_admin_user_index'|is_active }}">
                            <a href="{{ path('app_admin_user_index') }}" class="sidebar-link">
                                <i class="bi bi-people-fill"></i>
                                <span>{{ 'sidebar.users'|trans }}</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>